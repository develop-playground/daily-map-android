<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.dev.playground.presentation.ui.feed.FeedViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cvFeedToolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/feed_toolbar_height"
            android:background="@color/black"
            android:paddingHorizontal="@dimen/spacing_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivFeedToolbarLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/ic_drop_logo_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/spacing_4"
                android:contentDescription="@null"
                android:src="@drawable/ic_map_pin"
                app:layout_constraintBottom_toBottomOf="@id/ivFeedToolbarLogo"
                app:layout_constraintEnd_toStartOf="@id/tvFeedMemoryTitle"
                app:layout_constraintTop_toTopOf="@id/tvFeedMemoryTitle"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvFeedMemoryTitle"
                style="@style/Gmarket.Medium.12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_4"
                android:text="@string/feed_memory_title_text"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/ivFeedToolbarLogo"
                app:layout_constraintEnd_toStartOf="@id/tvFeedMemoryCount" />

            <TextView
                android:id="@+id/tvFeedMemoryCount"
                style="@style/Gmarket.Medium.12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{vm.currentState.itemSize}"
                android:textAppearance="@style/Gmarket.Medium.12"
                android:textColor="@color/lime"
                app:layout_constraintBottom_toBottomOf="@id/ivFeedToolbarLogo"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="32" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srlFeed"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingVertical="@dimen/spacing_20"
                    android:visibility="@{vm.currentState.isSuccess ? View.VISIBLE : View.INVISIBLE}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <include
                    layout="@layout/layout_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="@{vm.currentState.isEmpty ? View.VISIBLE : View.GONE}" />

                <include
                    layout="@layout/layout_failure"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="@{vm.currentState.hasError ? View.VISIBLE : View.GONE}" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/spacing_16"
                    android:paddingTop="@dimen/spacing_20"
                    android:visibility="@{vm.currentState.isLoading ? View.VISIBLE : View.GONE}">

                    <View
                        android:id="@+id/vSkeletonTitle1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/feed_skeleton_title_height"
                        android:background="@color/gray_light"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:radius="@{@dimen/feed_skeleton_radius}" />

                    <View
                        android:id="@+id/vSkeletonContent1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/feed_skeleton_content_height"
                        android:layout_marginTop="@dimen/spacing_8"
                        android:background="@color/gray_light"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/vSkeletonTitle1"
                        app:radius="@{@dimen/feed_skeleton_radius}" />

                    <View
                        android:id="@+id/vSkeletonDescription1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/feed_skeleton_description_height"
                        android:layout_marginTop="@dimen/spacing_12"
                        android:background="@color/gray_light"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/vSkeletonContent1"
                        app:radius="@{@dimen/feed_skeleton_radius}" />

                    <View
                        android:id="@+id/vSkeletonDescription2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/feed_skeleton_description_height"
                        android:layout_marginTop="@dimen/spacing_4"
                        android:background="@color/gray_light"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/vSkeletonDescription1"
                        app:radius="@{@dimen/feed_skeleton_radius}" />

                    <View
                        android:id="@+id/vSkeletonTitle2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/feed_skeleton_content_height"
                        android:layout_marginTop="@dimen/spacing_32"
                        android:background="@color/gray_light"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/vSkeletonDescription2"
                        app:radius="@{@dimen/feed_skeleton_radius}" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/spacing_8"
                        android:background="@color/gray_light"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/vSkeletonTitle2"
                        app:radius="@{@dimen/feed_skeleton_radius}" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
