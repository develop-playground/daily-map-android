<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctlView"
        android:layout_width="@dimen/login_view_constraintLayout_width"
        android:layout_height="@dimen/login_view_constraintLayout_height"
        tools:background="@color/yellow">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivLoginView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/login_view_imageView_marginStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_kakao_logo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLoginView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/kakao_login_view"
            tools:textColor="@color/kakaoText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>